/*Skalez Games products css page*/




/*Page format*/

#productsTable{
	position: relative;

}


h1 {
	text-align: center;
	padding-top: 1em;
	color: white
}


body {
	font-family: Verdana, sans-serif;

}

.bordered {
	width: 75%;
	margin: 0 auto;
	border: 2px solid #000099;
	border-collapse: collapse;
	padding:0.5em;
}

.centre {
	text-align: center;
}

caption {
	font-weight: bold;
	font-size: 20px;
	font-family: Tahoma, sans-serif;
	text-align: center;
	padding-bottom: 0.5em;
	color: white
}

.tableHead {
	border-bottom: 2px solid #000099;
	padding: 0.25em;
	background: #000099;
	text-transform: uppercase;
	text-align: center;
	color: white;
	font-size: 10px;
}

tbody tr:nth-child(even){
		background-color: #C2E0FF;
}
tbody tr:nth-child(odd) {
	background-color: white
}

td {
	border: 1px solid #000099;
	padding: 0.25em;
}

.num {
	text-align: right;
}

#price {
	text-align: center;
}

thead th {
	text-align: center
}

.bold {
	font-weight: bold
}
