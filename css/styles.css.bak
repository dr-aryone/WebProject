	background-size: 100%;
}
.title  {
color: white;
text-shadow: -1px 0 black, 0 3px black, 3px 0 black, 0 -1px black;
}

#background { 
    position:fixed; left: 0px; 
    top: 0px; background-size:100%;  
     width:100%; height:100%; 
     -webkit-user-select: none; -khtml-user-select: none; 
     -moz-user-select: none; -o-user-select: none; user-select: none; 
      z-index:9990; 
    }


#newreleasestitle {
	color: white;
	text-align: center;
	font-size: 14px;
}


#twitter_title{
	text-align: center;
	color: white;
}

#relative {
	float: right;
}




